<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.phoenixxie.utils.ssidscanner.MainActivity$PlaceholderFragment" >

    <ListView
        android:id="@+id/listViewSSID"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        >
    </ListView>

    <Button
        android:id="@+id/buttonScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listViewSSID"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="15dp"
        android:text="Scan" />

    <Button
        android:id="@+id/buttonStopScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listViewSSID"
        android:layout_alignTop="@+id/buttonScan"
        android:layout_toRightOf="@+id/buttonScan"
        android:layout_marginLeft="44dp"
        android:enabled="false"
        android:text="Stop scan" />

    <Button
        android:id="@+id/buttonRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonScan"
        android:layout_below="@+id/buttonScan"
        android:text="Record" />

    <Button
        android:id="@+id/buttonStopRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonRecord"
        android:layout_below="@+id/buttonStopScan"
        android:layout_alignLeft="@+id/buttonStopScan"
        android:enabled="false"
        android:text="Stop record" />

</RelativeLayout>